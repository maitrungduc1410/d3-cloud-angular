{
  "name": "angular-d3-cloud",
  "version": "0.0.0",
  "scripts": {
    "start": "npm run build:lib && ng serve example --watch=false --configuration development",
    "watch:app": "ng serve example --watch=true --configuration development",
    "watch:lib": "ng build angular-d3-cloud --watch --configuration development",
    "build:all": "npm run build:lib && npm run build:app",
    "build:lib": "ng build angular-d3-cloud --configuration production",
    "build:app": "ng build example --configuration production",
    "test": "npm run clean-jest && npm run run-jest",
    "test:ci": "npm run clean-jest && npm run run-jest:ci",
    "clean-jest": "rimraf .jest-cache coverage",
    "run-jest": "node --expose-gc node_modules/jest/bin/jest.js --coverage --config jest.config.js --logHeapUsage --maxWorkers=30%",
    "run-jest:ci": "node --expose-gc node_modules/jest/bin/jest.js --ci --coverage --config jest.config.js --logHeapUsage",
    "update-browserslist": "npx browserslist@latest --update-db"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "15.0.1",
    "@angular/common": "15.0.1",
    "@angular/compiler": "15.0.1",
    "@angular/core": "15.0.1",
    "@angular/forms": "15.0.1",
    "@angular/platform-browser": "15.0.1",
    "@angular/platform-browser-dynamic": "15.0.1",
    "@angular/router": "15.0.1",
    "d3-cloud": "^1.2.5",
    "d3-scale": "4.0.2",
    "d3-scale-chromatic": "3.0.0",
    "d3-selection": "3.0.0",
    "d3-transition": "3.0.1",
    "rxjs": "7.5.7",
    "tslib": "2.4.1",
    "zone.js": "0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "15.0.1",
    "@angular/cli": "15.0.1",
    "@angular/compiler-cli": "15.0.1",
    "@types/d3-cloud": "^1.2.3",
    "@types/d3-scale": "4.0.2",
    "@types/d3-scale-chromatic": "3.0.0",
    "@types/d3-selection": "3.0.3",
    "@types/d3-transition": "3.0.2",
    "@types/jest": "29.1.2",
    "@types/node": "14.18.2",
    "codelyzer": "6.0.0",
    "jest": "29.1.2",
    "jest-canvas-mock": "2.4.0",
    "jest-preset-angular": "12.2.2",
    "ng-packagr": "15.0.1",
    "rimraf": "3.0.2",
    "ts-node": "10.8.1",
    "typescript": "4.8.4"
  }
}
